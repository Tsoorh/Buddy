{
    "name": "Buddy Dev Container",
    "dockerComposeFile": "../docker-compose.yml",
    "service": "web", 
    "workspaceFolder": "/app", 
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "njpwerner.autodocstring",
                "ckotzbauer.vscode-pg-client" 
            ]
        }
    },
    "forwardPorts": [8000, 5432],
    "remoteUser": "root",
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    }
}